extends ./base.jade

- block content
  a.login(href="#{ settings.LOGIN_URL }") log in
  section.headline
    .container
      img(src="#{ settings.STATIC_URL }img/idlecars_logo_white.png", alt="idlecars", class="logo")
      .content
        h1
          | Start renting
          br
          | Start earning
        p A safe and reliable marketplace for professional drivers to rent for-hire vehicles, on-demand.
        a.button(href="#{ settings.WEBAPP_URL }") Find your car

  section.select
    .container
      .content
        h2 Ready to drive
        p Every idlecar is inspected and is already registered with the TLC.
        p Find a car and start driving the next day. No leases, loans or long-term commitments.

  section.get-more
    .container
      h2 It’s your choice
      p Our cars allow you to drive for any base.
      img.service-logos-big(src="#{ settings.STATIC_URL }img/services_stacked.jpg", alt="uber lift and others")
      img.service-logos-small(src="#{ settings.STATIC_URL }img/rideshare_logos.png", alt="uber lift and others")

  section.get-more.convenient
    .container
      h2 Convenient for you
      p We take care of all the paperwork, insurance, and maintenance.
      p The listed price is all you pay.

  #lets-talk
  - if show_thanks
    section.thanks
      .container
        .content
          h2 Thanks!
          p Expect an email from us shortly.
          p Don't wan't to wait? 1-844-IDLECAR

  section.form
    .container
      form(action="#{ action }", ng-app='app', method="post", ng-controller="formCtrl", novalidate='', name="myForm")
        - csrf_token

        ul.role(ng-init="role = 'driver'")
          li
            input#id_role_0(name='role', type='radio', value='driver', checked, ng-model='role')
            div
              label(for='id_role_0') I’m a driver.
              p Show me the available cars.
          li
            input#id_role_1(name='role', type='radio', value='owner', ng-model='role')
            div
              label(for='id_role_1') I own a car.
              p I want my car to make me money.

        ul.contact(ng-show="role == 'owner'")
          li
            label(for='id_email', ng-bind='emailLabel', ng-class='{red:emailRed}')

            input#id_email(maxlength='254', name='email', type='email', ng-model='email', placeholder='you@example.com', required='')

          li
            label(for='id_zipcode', ng-bind='zipLabel', ng-class='{red:zipRed}')

            input#id_zipcode(maxlength='5', name='zipcode', type='text', ng-pattern='/[0-9]{5}/', ng-model='zipcode', placeholder='10001', required='')


        input.button(ng-show="role == 'owner'", type="submit", value="Let's Talk", ng-click='validation($event)')

        a.button(ng-show="role == 'driver'", href="#{ settings.WEBAPP_URL }") Find your car



  footer
    .container
      p.ask
        a(href='mailto:support@idlecars.com') ASK US ANYTHING
        div.last_content
          | <p class='tm'>© {% now 'Y' %} idlecars</p>
          p.tm All trademarks and images are copyright of their respective owners.
