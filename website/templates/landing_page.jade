extends ./base.jade

- block content
  section.navbar
    .logo
      img(src="#{ settings.STATIC_URL }img/idlecars_logo_white.png")
    .links
      a How it works
      a Join/Login
      a List your car
    .menu-button(ng-click='showMenu = !showMenu')
      .burger-button
    .menu-container(ng-show='showMenu', ng-click='showMenu=false')
      a How it works
      a Join/Login
      a List your car

  section.headline
    .phone-background
      .container
        div
          img(src="#{ settings.STATIC_URL }img/idlecars_logo_white.png")
        .content
          h2 Keep More of #[br] What You Earn
          p NYC's widest selection of TLC registered #[br] for-hire rentals at the best price
          p No leases, loans or long-term commitments. #[br] insurance and maintenance included.
          a.button(href="#{ settings.WEBAPP_URL }") Find your car
          a.login(href="#{ login_url }") Have an account? #[span Log in]

  section.get-more
    .container
      h3 Register Today. Drive Tomorrow.
      p we handle the paperwork so you can focus on your fares.

  section.select
    .container
      .content
        h3 Choose your car, get insured #[br] and start driving within #[br] #[strong 24 hours.]
        h1 It's that easy

  section.manhattan
    .container
      h3 Your Car, Your Service. When you need it.
      p Idlecars work with all services including Uber, Lyft and More
      img(src="#{ settings.STATIC_URL }img/services_stacked.png")

  section.tutorial
    h2 How it works
    .segments
      .segment
        .pane
          img(src="#{ settings.STATIC_URL }img/white_car.png")
          p #[strong Pick A Car. Any Car.]
          p Find the car that fits your style and budget.
      .segment
        .pane
          img(src="#{ settings.STATIC_URL }img/white_car.png")
          p #[strong Start Your Account.]
          p Use your smartphone to upload your driving documents.
      .segment
        .pane
          img(src="#{ settings.STATIC_URL }img/white_car.png")
          p #[strong Reserve Your Car.]
          p Use your credit card or bank account to reserve your car.
      .segment
        .pane
          img(src="#{ settings.STATIC_URL }img/white_car.png")
          p #[strong DRIVE]
          p Once you’re added to the insurance you’re ready to go. Go pick up your car!

  #lets-talk
  - if show_thanks
    section.thanks
      .container
        .content
          h3 Thanks!
          p Expect an email from us shortly.
          p Don't wan't to wait? 1-844-IDLECAR (1-844-435-3227)

  section.form(ng-controller="formCtrl")
    .container
      form(action="#{ action }", method="post", novalidate='', name="myForm")
        - csrf_token

        ul.role(ng-init="role = 'driver'")
          li
            input#id_role_0(name='role', type='radio', value='driver', checked, ng-model='role')
            div
              label(for='id_role_0') I’m a driver.
              p Show me the available cars.
          li
            input#id_role_1(name='role', type='radio', value='owner', ng-model='role')
            div
              label(for='id_role_1') I own a car.
              p I want my car to make me money.

        ul.contact(ng-show="role == 'owner'")
          li
            label(for='id_email', ng-bind='emailLabel', ng-class='{red:emailRed}')

            input#id_email(maxlength='254', name='email', type='email', ng-model='email', placeholder='you@example.com', required='')

          li
            label(for='id_zipcode', ng-bind='zipLabel', ng-class='{red:zipRed}')

            input#id_zipcode(maxlength='5', name='zipcode', type='text', ng-pattern='/[0-9]{5}/', ng-model='zipcode', placeholder='10001', required='')

        input.button(ng-show="role == 'owner'", type="submit", value="Let's Talk", ng-click='validation($event)')

        a.button(ng-show="role == 'driver'", href="#{ settings.WEBAPP_URL }") Find your car

  section.ask
    h3 Your Car is Ready, Are You?
      a(href='mailto:support@idlecars.com') ASK US ANYTHING
    h3 Follow Us Too
    .social
      .app
        img(src="#{ settings.STATIC_URL }img/twitter.png")
      .app
        img(src="#{ settings.STATIC_URL }img/facebook.png")
      .app
        img(src="#{ settings.STATIC_URL }img/linkedin.png")

  footer
    p.tm © {% now 'Y' %} idlecars
    p.tm All trademarks and images are copyright of their respective owners.
