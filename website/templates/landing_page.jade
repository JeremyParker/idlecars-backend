extends ./base.jade

- block content
  section.headline
    .container
      img(src="#{ settings.STATIC_URL }img/idlecars_logo_white.png", alt="idlecars", class="logo")
      .content
        h1 Revolutionizing Rideshare
        h3.subhead vehicles + sharing + technology + drivers
        p Earn more by renting luxury cars and working as a rideshare driver.
        a.button(href="#lets-talk") LEARN MORE

  section.select
    .container
      .content
        h2 Select the best
        p We provide a wide selection of premium vehicles to drive for high-end rideshare and limousine services.

  section.get-more
    .container
      h2 Get more rides
      p.strong Our cars allow you to drive for any base.
      p No matter which vehicle you rent, you can accept rides from any rideshare, limousine, or dispatch company.
      img.service-logos-big(src="#{ settings.STATIC_URL }img/services_stacked.jpg", alt="uber lift and others")
      img.service-logos-small(src="#{ settings.STATIC_URL }img/rideshare_logos.png", alt="uber lift and others")

  section.keep-more
    .container
      .content
        h2 Keep more of your earnings
        p You only pay for the hours you rent.

  section.get-more.convenient
    .container
      h2 Convenient for you
      p We take care of all the paperwork, insurance, and maintenance. We even ensure each car is clean for every shift.

  #lets-talk
  - if show_thanks
    section.thanks
      .container
        .content
          h2 Thanks!
          p Expect an email from us shortly.
          p Don't wan't to wait? 1-844-IDLECAR

  section.form
    .container
      form(action="#{ action }", ng-app='app', method="post", ng-controller="formCtrl", novalidate='', name="myForm")
        - csrf_token

        ul.role
          li
            input#id_role_0(name='role', type='radio', value='driver', checked)
            div
              label(for='id_role_0') I want to drive.
              p Send me an invitation so I can rent.
          li
            input#id_role_1(name='role', type='radio', value='owner')
            div
              label(for='id_role_1') I own a car.
              p I want my car to make me money.

        ul.contact
          li
            label(for='id_email', ng-bind='emailLabel', ng-class='{red:emailRed}')
              
            input#id_email(maxlength='254', name='email', type='email', ng-model='email', placeholder='you@example.com', required='')

          li
            label(for='id_zipcode', ng-bind='zipLabel', ng-class='{red:zipRed}')
              
            input#id_zipcode(maxlength='5', name='zipcode', type='text', ng-pattern='/[0-9]{5}/', ng-model='zipcode', placeholder='10001', required='')
          

        input.button(type="submit", value="Let's Talk", ng-click='validation($event)')
        
  

  footer
    .container
      p.ask
        a(href='mailto:support@idlecars.com') ASK US ANYTHING
